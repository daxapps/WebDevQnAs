<% include partials/header %> 

<div class="container">
  <form method="POST"  class="forms new-question-form">
   <h3>Add Question and Answer</h3>
   <div class="form-group">
    <label>Category</label>
    <select name="category" id="" class="form-control" required autofocus>
      <option value="">Choose Category</option>
      <option value="General">General</option>
      <option value="HTML">HTML</option>
      <option value="CSS">CSS</option>
      <option value="Javascript">Javascript</option>
      <option value="Testing">Testing</option>
      <option value="Performance">Performance</option>
      <option value="Network">Network</option>
      <option value="Coding">Coding</option>
      <option value="Fun">Fun</option>
      <option value="React">React</option>
    </select>
  </div>
  <div class="form-group">
   <label>Question</label>
   <input type="text" name="question" class="form-control" required autofocus>
 </div>
 <div class="form-group">
   <label>Answer</label>
   <textarea type="text" name="answer" class="form-control" required autofocus></textarea> 
 </div>
 <div class="form-group">
   <label>Source</label>
   <input name="source" class="form-control" rows="5" required autofocus>
 </div>
 <div class="form-group">
   <button class="btn btn-success">Submit</button>
 </div>
</form>
</br>
<div class="text-center" style="">
  <% qnas.forEach(function(qna){ %>
  <div class="card">
    <h2 class="question"><%= qna.question %></h2>
    <h3 class="category"><%= qna.category %></h3>
    <p><%= qna.answer %></p>
    <p><em>Source: <%= qna.source %></em></p>
    <p><em>Submitted By: <%= qna.author.username %></em></p>             
  </div>
</br>
<% }); %>
</div> 
</div>

<% include partials/footer %>
